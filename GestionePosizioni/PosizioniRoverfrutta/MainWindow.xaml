<Window x:Class="PosizioniRoverfrutta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:watermarkAdorner="clr-namespace:PosizioniRoverfrutta.CustomControls.WatermarkAdorner"
        Title="Posizioni Roverfrutta - Menu" Height="600" Width="300" MaxWidth="300"
        Left="0" Top="0"
        Name="MenuWindow">
    <Grid>
        <StackPanel Orientation="Vertical" CanHorizontallyScroll="False" CanVerticallyScroll="True">
            <GroupBox Header="Ricerca Posizioni">
                <StackPanel Orientation="Vertical">
                    <TextBox Name="SearchTextBox">
                        <watermarkAdorner:WatermarkService.Watermark>Numero, Compagnia o Data</watermarkAdorner:WatermarkService.Watermark>
                    </TextBox>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Padding="5" Margin="3" Grid.Column="0">Conf. Vendita</Button>
                        <Button Padding="5" Margin="3" Grid.Column="1">Carico</Button>
                        <Button Padding="5" Margin="3" Grid.Column="2">Conf. Prezzo</Button>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
