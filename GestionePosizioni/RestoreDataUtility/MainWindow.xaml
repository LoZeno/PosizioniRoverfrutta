<Window x:Class="RestoreDataUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestoreDataUtility"
        mc:Ignorable="d"
        Title="Restore Data" Height="308.475" Width="525">
    <Window.DataContext>
        <local:RestoreViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Name="StartButton" Padding="5" Margin="3" Command="{Binding StartRestore}">Seleziona cartella contenente il backup e avvia il ripristino</Button>
            <ListBox Height="200" ItemsSource="{Binding Output}"></ListBox>
        </StackPanel>
    </Grid>
</Window>
